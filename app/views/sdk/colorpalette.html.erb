            <div class="wl-left colorpalette_descriptive_text">
                <%= image_tag "hex_888888-b0aeaf_examplewidget.png", :alt => "HEX Color Example Widget", :class => "descriptive_icon hex_icon_example" %>
                <p>Example:</p>
                <span>System message</span>
            </div>
            <hr class="wl-push wl-hidden"/>
        </div>

        <div class="hex_item">
            <div class="wl-left">
                <%= image_tag "hex_f1f9fc_example.png", :alt => "HEX Color", :class => "descriptive_icon hex_icon" %>
                <p class="hex_value_text">f1f9fc</p>
            </div>
            <div class="colorpalette_descriptive_text">
                <p>List item 'hover' color</p>
                <span>To be used when a module has a 'list' of content items.</span>
