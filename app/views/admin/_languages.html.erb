<table class="admin-table">
    <thead>
        <th>Language</th>
        <th>Code</th>
        <th>Region</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <% @languages.each do |language| %>
            <tr>
                <td><%= language.title %></td>
                <td><%= language.code %></td>
                <td><%= language.region %></td>
                <td class="admin-language-actions">
                    <a class="wl-button wl-overlay-button" href="/admin/languages/edit/<%= language.id %>">Edit</a>
                    <%= form_tag "/admin/languages/remove", :method => "POST", :class => "language_remove_form" do %>
                        <input type="hidden" name="id" value="<%= language.id %>" />
                        <input class="language-used" type="hidden" name="language_used" value="<%= @langs_used.include?(language.id) %>" />
                        <button class="wl-button wl-overlay-button" title="Remove <%= language.title %>" type="submit">Remove</button>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>